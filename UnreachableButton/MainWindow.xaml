        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnreachableButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280" ResizeMode="NoResize">
    <Grid MouseMove="Grid_MouseMove">
        <Button Content="Нажми на меня!" HorizontalAlignment="Left" Margin="374,182,0,0" VerticalAlignment="Top" Name="button" Width="100" Height="50" Click="buttonClicked"/>

    </Grid>
</Window>
